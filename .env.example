# Database Configuration
DATABASE_URL=postgresql+asyncpg://todouser:todopass@postgres:5432/tododb

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_SERVICE_NAME=todo-api
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=development,service.version=0.1.0

# OpenTelemetry Exporters
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# OpenTelemetry Python Auto-Instrumentation
OTEL_PYTHON_LOGGING_AUTO_INSTRUMENTATION_ENABLED=true
OTEL_PYTHON_FASTAPI_EXCLUDED_URLS=/health,/metrics

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO